{% extends 'ZhpDashboardBundle::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}" />
{% endblock %}

{% block body %}

    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">E-hufiec</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Profil</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('logout') }}">Wyloguj</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div><!--/.navbar-collapse -->
        </nav>

        <div class="container" id="tourpackages-carousel">
            <div class="row">
                <div class="col-lg-12"><h1>Moduły</h1></div>
                {% include 'ZhpDashboardBundle:Component:_card_component.html.twig'
                with
                {'title' : "Zbiórki publiczne", 'description' : "Zarządzaj zbiórkami publicznymi", 'have_role' : is_granted('ROLE_ZBIORKI')}
                %}
                {% include 'ZhpDashboardBundle:Component:_card_component.html.twig'
                with
                {'title' : "HAL", 'description' : "Harcerska akcja letnia", 'have_role' : is_granted('ROLE_HAL')}
                %}
                {% include 'ZhpDashboardBundle:Component:_card_component.html.twig'
                with
                {'title' : "Raporty", 'description' : "Moduł raportowania i rozliczeń", 'have_role' : is_granted('ROLE_RAPORTY')}
                %}
                {% include 'ZhpDashboardBundle:Component:_card_component.html.twig'
                with
                {'title' : "Moduł administracyjny", 'description' : "Zarządzaj użytkownikami i ustawieniami systemu", 'have_role' : is_granted('ROLE_ADMIN')}
                %}
            </div><!-- End row -->
        </div><!-- End container -->

    </div>
{% endblock %}
